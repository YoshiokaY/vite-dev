{
  "parser": {
    "\\.jsx$": "@markuplint/pug-parser"
  },
  "rules": {
    "class-naming": false,
    "case-sensitive-attr-name": false,
    "disallowed-element": true,
    "attr-value-quotes": true,
    "no-hard-code-id": false,
    "require-datetime": true,
    "no-empty-palpable-content": true,
    "doctype": "always",
    "ineffective-attr": true,
    "use-list": true,
    "no-default-value": true,
    "required-element": true,
    "required-h1": true,
    "case-sensitive-tag-name": true,
    "no-refer-to-non-existent-id": true,
    "no-use-event-handler-attr": true,
    "deprecated-element": true,
    "character-reference": true,
    "landmark-roles": true,
    "end-tag": true,
    "id-duplication": true,
    "attr-duplication": true,
    "deprecated-attr": true,
    "placeholder-label-option": true,
    "label-has-control": true,
    "invalid-attr": true,
    "require-accessible-name": true,
    "no-boolean-attr-value": true,
    "required-attr": true,
    "wai-aria": true,
    "permitted-contents": true
  },
  "nodeRules": [
    {
      "selector": "meta,head",
      "rules": {
        "invalid-attr": false,
        "required-attr": false
      }
    }
  ],
  "pretenders": [
    {
      "selector": "List",
      "as": "ul"
    },
    {
      "selector": "ListItem",
      "as": "li"
    },
    {
      "selector": "Slot",
      "as": {
        "element": "slot"
      }
    }
  ]
}
